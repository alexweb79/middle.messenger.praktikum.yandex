{
  "extends": ["stylelint-config-standard-scss"],
  "rules": {
    "max-empty-lines": 1,
    "block-no-empty": true,
    "color-hex-case": "upper",
    "no-invalid-position-at-import-rule": null,
    "selector-class-pattern": "[a-z]+",
    "no-descending-specificity": null,
    "import-notation": null
  },
  "ignoreFiles": [
    "node_modules",
    "dist/*"
  ]
}
