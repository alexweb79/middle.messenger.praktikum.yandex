{{> header title='Profile change data' }}

    <div class="page-profile">

      <div class="page-profile__button">
        {{> button-arrow left='true' right='' }}
      </div>

      <div class="page-profile__data">
        <form class="form-profile profile" action="">

          <div class="profile__avatar">
            {{> avatar }}
          </div>

          <ul class="profile__list">
            <li class="profile__label">
              {{> placeholder class='profile__input-placeholder' text='Почта' }}
              {{> input class='profile__input' type='email' name='email' value='pochta@yandex.ru' required='required' }}
            </li>
            <li class="profile__label">
              {{> placeholder class='profile__input-placeholder' text='Логин' }}
              {{> input class='profile__input' type='text' name='login' value='ivanivanov' required='required' }}
            </li>
            <li class="profile__label">
              {{> placeholder class='profile__input-placeholder' text='Имя' }}
              {{> input class='profile__input' type='text' name='first_name' value='Иван' required='' }}
            </li>
            <li class="profile__label">
              {{> placeholder class='profile__input-placeholder' text='Фамилия' }}
              {{> input class='profile__input' type='text' name='second_name' value='Иванов' required='' }}
            </li>
            <li class="profile__label">
              {{> placeholder class='profile__input-placeholder' text='Имя в чате' }}
              {{> input class='profile__input' type='text' name='display_name' value='Иван' required='' }}
            </li>
            <li class="profile__label">
              {{> placeholder class='profile__input-placeholder' text='Телефон' }}
              {{> input class='profile__input' type='tel' name='phone' value='+7 (909) 967 30 30' required='' }}
            </li>
          </ul>

          <ul class="profile__list">
            <li class="profile__label">
              {{> button class='profile__button button button-primary' type='submit' text='Сохранить' }}
            </li>
          </ul>

        </form>

      </div>

    </div>

{{> footer }}
