{{> header title='Login' }}

    <div class="page-login">
      <form class="form" action="">
        {{> title class='form__title' text='Вход' }}
        <label class="form__label">
          {{> input class='form__input' type='text' name='login' value='' placeholder='Логин' required='required' }}
          {{> placeholder class='form__input-placeholder' text='Логин' }}
          <span class="form__input-error">Неверный логин</span>
        </label>
        <label class="form__label">
          {{> input class='form__input' type='password' name='password' value='' placeholder='Пароль' required='required' }}
          {{> placeholder class='form__input-placeholder' text='Пароль' }}
          <span class="form__input-error"></span>
        </label>
        {{> button class='form__button button button-primary' type='submit' text='Войти' }}
        {{> link class='form__link' href='registration.hbs' text='Нет аккаунта?' }}
      </form>
    </div>

{{> footer }}
