{{> header title='Регистрация' }}

    <div class="page-registration">
      <form class="form" action="">
        {{> title class='form__title' text='Регистрация' }}
        <label class="form__label">
          {{> input class='form__input' type='email' name='email' value='' placeholder='Почта' required='required' }}
          {{> placeholder class='form__input-placeholder' text='Почта' }}
          <span class="form__input-error"></span>
        </label>
        <label class="form__label">
          {{> input class='form__input' type='text' name='login' value='' placeholder='Логин' required='required' }}
          {{> placeholder class='form__input-placeholder' text='Логин' }}
          <span class="form__input-error">Неверный логин</span>
        </label>
        <label class="form__label">
          {{> input class='form__input' type='text' name='first_name' value='' placeholder='Имя' }}
          {{> placeholder class='form__input-placeholder' text='Имя' }}
          <span class="form__input-error"></span>
        </label>
        <label class="form__label">
          {{> input class='form__input' type='text' name='second_name' value='' placeholder='Фамилия' }}
          {{> placeholder class='form__input-placeholder' text='Фамилия' }}
          <span class="form__input-error"></span>
        </label>
        <label class="form__label">
          {{> input class='form__input' type='tel' name='password' value='' placeholder='Телефон' required='required' }}
          {{> placeholder class='form__input-placeholder' text='Телефон' }}
          <span class="form__input-error"></span>
        </label>
        <label class="form__label">
          {{> input class='form__input' type='password' name='password' value='' placeholder='Пароль' required='required' }}
          {{> placeholder class='form__input-placeholder' text='Пароль' }}
          <span class="form__input-error"></span>
        </label>
        <label class="form__label">
          {{> input class='form__input' type='password' name='password_confirm' value='' placeholder='Пароль (ещё раз)' required='required' }}
          {{> placeholder class='form__input-placeholder' text='Пароль (ещё раз)' }}
          <span class="form__input-error">Пароли не совпадают</span>
        </label>
        {{> button class='form__button button button-primary' type='submit' text='Зарегистрироваться' }}
        {{> link class='form__link' href='login.hbs' text='Войти' }}
      </form>
    </div>

{{> footer }}
